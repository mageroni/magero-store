@using magero_store.Models
@model IEnumerable<magero_store.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_Layout";
    var total = Model?.Sum(i => i.Quantity * i.Product.Price) ?? 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-4">Shopping Cart</h2>
            <hr />
            @if (Model != null && Model.Any())
            {
                <form id="cartForm">
                    <div class="d-flex flex-column gap-3">
                        @foreach (var item in Model)
                        {
                            <div class="card p-3 shadow-sm align-items-center flex-row">
                                <input type="checkbox" class="form-check-input me-3" />
                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-thumbnail me-4" style="width: 110px; height: 150px; object-fit: cover;" />
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="mb-1">@item.Product.Name</h5>
                                            <div class="text-muted small mb-1">@item.Product.Description</div>
                                            <div class="fw-bold fs-5">@item.Product.Price.ToString("C")</div>
                                            <div class="text-success small">In Stock</div>
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" id="gift-@item.ProductId" />
                                                <label class="form-check-label" for="gift-@item.ProductId">This is a gift</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column align-items-end">
                                            <div class="input-group mb-2" style="width: 110px;">
                                                <button class="btn btn-outline-secondary" type="button" disabled>-</button>
                                                <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                                                <button class="btn btn-outline-secondary" type="button" disabled>+</button>
                                            </div>
                                            <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-link text-danger p-0">Delete</button>
                                            </form>
                                            <span class="mx-1">|</span>
                                            <a href="#" class="btn btn-link p-0">Save for later</a>
                                            <span class="mx-1">|</span>
                                            <a href="#" class="btn btn-link p-0">Compare with similar items</a>
                                            <span class="mx-1">|</span>
                                            <a href="#" class="btn btn-link p-0">Share</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    Your cart is empty. <a asp-controller="Products" asp-action="Index">Continue shopping</a>
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="card p-4 shadow-sm sticky-top" style="top: 90px;">
                <h5 class="mb-3">Subtotal (@(Model?.Sum(i => i.Quantity) ?? 0) item@(Model?.Sum(i => i.Quantity) == 1 ? "" : "s")):</h5>
                <div class="fs-4 fw-bold mb-3">@total.ToString("C")</div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="orderGift" />
                    <label class="form-check-label" for="orderGift">This order contains a gift</label>
                </div>
                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-warning w-100 mb-2">Proceed to checkout</a>
                <div class="small text-muted">FREE delivery on eligible items with no order minimum.</div>
            </div>
        </div>
    </div>
</div>