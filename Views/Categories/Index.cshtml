@model IEnumerable<magero_store.Models.Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Categories</h1>
            
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Category
                </a>
            </div>
        </div>
    </div>
    
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>