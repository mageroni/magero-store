@using magero_store.Models
@model magero_store.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div class="container">
    <!-- Product Detail Layout -->
    <div class="product-detail">
        <!-- Product Image -->
        <div class="product-detail-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        </div>

        <!-- Product Information -->
        <div class="product-detail-info">
            <h1 class="product-detail-title">@Model.Name</h1>
            <p class="product-detail-subtitle">Subheading</p>
            <p class="product-detail-price">$@Model.Price.ToString("0.00")</p>
            <p class="product-detail-description">@Model.Description</p>
            
            <!-- Add to Cart Form -->
            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <select name="quantity" id="quantity" class="form-select" style="margin-bottom: 24px;">
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary w-100">Add to cart</button>
                </div>
            </form>

            <p style="font-size: 16px; font-weight: 500; color: #828282; margin-top: 24px;">Text box for additional details or fine print</p>
        </div>
    </div>

